<%- include('./partials/header.ejs') %>
<% if(messages.info){ %>
    <div class="alert alert-warning">
      <%= messages.info %>
    </div>
    <% } %>
    <% if(messages.register){ %>
        <div class="alert alert-success" role="alert">
          <%= messages.register %>
        </div>
        <% } %>
          <% if(messages.error){ %>
            <div class="alert alert-danger">
              <%= messages.error %>
            </div>
            <% } %>
                <div class="d-flex flex-column align-items-center">
                        <div class="logo-div container-fluid">
                            <img class="img-fluid py-5" src="/images/logo.webp" alt="logo" height="200px" width="300px">
                        </div>
                        <div class="container">
                            <div class="pt-5 pb-2 heading_login">
                                <h1 class="text-primary">Log in</h1>
                            </div>
                            <div class="my-3">
                                <form action="/" method="post">
                                    <div class="my-3">
                                      <label for="inputEmail">Email Address</label>
                                      <input class="form-control" type="text" name="username" placeholder="Email Id">
                                    </div>
                                    <div class="my-3">
                                      <label for="inputEmail">Password</label>
                                      <input class="form-control" type="password" name="password" placeholder="Password">
                                    </div>
                                    <button class="btn btn-primary btn-block round" type="submit">Log in</button>
                                  </form>
                            </div>
                        </div>
                        <div class="my-3">
                            <h4>Don't have an account ? <span><a href="/register">Sign Up</a></span></h4>
                        </div>
                </div>
                <%- include('./partials/footer.ejs') %>